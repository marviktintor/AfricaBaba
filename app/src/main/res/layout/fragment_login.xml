<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="10dp">

        <com.origicheck.africababa.views.circleimageview.CircleImageView
            android:id="@+id/fragment_login_imageView_user_avatar"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/person_avatar"/>

        <EditText
            android:id="@+id/fragment_login_editText_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/username"
            android:inputType="text"/>

        <EditText
            android:id="@+id/fragment_login_editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="@string/password"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/fragment_login_button_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="@string/login"/>

        <Button
            android:id="@+id/fragment_login_button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/signup"/>
    </LinearLayout>
</RelativeLayout>